<script>
  const form = document.getElementById('jobForm');
  const jobsContainer = document.getElementById('jobsContainer');
  const searchInput = document.getElementById('search');

  const filterRegion = document.getElementById('filterRegion');
  const filterField = document.getElementById('filterField');
  const filterHours = document.getElementById('filterHours');
  const filterPayment = document.getElementById('filterPayment');
  const filterAge = document.getElementById('filterAge');

  const imageUpload = document.getElementById('imageUpload');

  let jobs = JSON.parse(localStorage.getItem('jobs')) || [];

  function renderJobs() {
    const searchTerm = searchInput.value.trim().toLowerCase();
    const regionFilter = filterRegion.value;
    const fieldFilter = filterField.value.trim().toLowerCase();
    const hoursFilter = filterHours.value;
    const paymentFilter = filterPayment.value;
    const ageFilter = parseInt(filterAge.value) || 0;

    jobsContainer.innerHTML = '';

    const filteredJobs = jobs.filter(job => {
      const titleMatch = job.title.toLowerCase().includes(searchTerm);
      const regionMatch = regionFilter === '' || job.region === regionFilter;
      const fieldMatch = fieldFilter === '' || job.field.toLowerCase().includes(fieldFilter);
      const hoursMatch = hoursFilter === '' || job.hours === hoursFilter;
      const paymentMatch = paymentFilter === '' || job.payment === paymentFilter;
      const ageMatch = ageFilter === 0 || parseInt
